<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="TextViewPrimary">
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:textSize">25sp</item>
      <item name="fontFamily">@font/mark_pro</item>
      <item name="android:textStyle">bold</item>
      <item name="android:textColor">#010035</item>
      <item name="android:layout_marginStart">17dp</item>
  </style>

<style name="TextViewIcon" parent="TextViewPrimary">
    <item name="android:textSize">12sp</item>
    <item name="fontStyle">normal</item>
    <item name="android:textColor">#010035</item>
    <item name="android:layout_marginStart">0dp</item>
</style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/searchview_background</item>
        <item name="android:elevation">5dp</item>
        <item name="android:fontFamily">@font/mark_pro</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textColorHint">@color/color_search</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSecond">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FF6E4E</item>
        <item name="fontFamily">@font/mark_pro</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/color_rating</item>
</style>
</resources>